<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/act_background_color"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity">

    <LinearLayout
        android:id="@+id/llytSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etvSearch"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/search_shape"
            android:hint="Search for Song, Album, Artist etc."
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSongFilter"
                style="@style/CustomSearchFilterButton"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.25"
                android:textSize="12sp"
                android:text="Songs" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAlbumFilter"
                style="@style/CustomSearchFilterButton"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.25"
                android:textSize="12sp"
                android:text="Album" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnArtistFilter"
                style="@style/CustomSearchFilterButton"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0.25"
                android:textSize="12sp"
                android:text="Artist" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlayListFilter"
                style="@style/CustomSearchFilterButton"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="12sp"
                android:layout_weight="0.25"
                android:text="PlayList" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/faded_text" />

    <FrameLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
